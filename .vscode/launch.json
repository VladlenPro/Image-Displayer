    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            
            "program": "${workspaceFolder}\\server\\server.js",
            "envFile": "${workspaceFolder}\\server\\.env",
            "env": {
                "NODE_ENV": "development"               // Set any additional environment variables here
              },
            "console": "integratedTerminal",          // Show output in the integrated terminal
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],                   
            
        }
    ]
}